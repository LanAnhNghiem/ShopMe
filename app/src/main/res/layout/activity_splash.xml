<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash"
    android:weightSum="10"
    tools:context="com.threesome.shopme.LA.SplashActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    //Space 2
    <android.support.v4.widget.Space
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    //Logo 1
    <FrameLayout
        android:id="@+id/layoutLogo"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:src="@drawable/bg_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:typeface="serif"
                android:textStyle="bold"
                android:textSize="40sp"
                android:paddingBottom="9dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="s"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </FrameLayout>
    //Slogan 1
    <TextView
        android:id="@+id/txtSlogan"
        android:textStyle="bold|italic"
        android:textSize="17sp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text="Nearby me and order online"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    //Icons
    <FrameLayout
        android:id="@+id/layoutIcons"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_gift"
                android:padding="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <ImageView
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_clothing"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <ImageView
                android:layout_marginLeft="10dp"
                android:paddingBottom="3dp"
                android:src="@drawable/icon_food"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>
    </FrameLayout>
    //Progress 1
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
