<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/bg_createstore_3"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.threesome.shopme.create_store.CreateStore_3Activity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            //5
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">
            </LinearLayout>
            //Image 170dp
            <LinearLayout
                android:padding="20dp"
                android:background="@drawable/bg_chooseimage"
                android:layout_gravity="center"
                android:layout_width="170dp"
                android:layout_height="170dp">
                <ImageView
                    android:alpha="0.6"
                    android:src="@drawable/imgstore_big"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <ImageView
                    android:src="@drawable/btnupload"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="100dp"
                    android:layout_height="40dp" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:textStyle="italic"
                    android:textColor="@android:color/white"
                    android:paddingRight="30dp"
                    android:paddingLeft="30dp"
                    android:textAlignment="center"
                    android:text="@string/note_choose_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            //continue 1
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/bg_continue"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/txtComplete"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:text="Complete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
