<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.threesome.shopme.CustomMapsActivity">

    //Fragment here
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/imgSlideMenuMap"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/icon_slide_black"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <com.skyfishjy.library.RippleBackground
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rb_color="@color/green_light"
        app:rb_duration="3000"
        app:rb_radius="40dp"
        app:rb_rippleAmount="3"
        app:rb_scale="6">

        <ImageView
            android:id="@+id/centerImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:src="@drawable/findme" />
    </com.skyfishjy.library.RippleBackground>

    <FrameLayout
        android:visibility="gone"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/bg_item_store"
        android:id="@+id/frameStore"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:id="@+id/txtNameStoreList"
                android:textColor="@android:color/white"
                android:typeface="serif"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center_horizontal|bottom"
                android:text="Trà Sữa Sky"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/txtAddressStoreList"
                android:textColor="@android:color/white"
                android:gravity="center_horizontal|top"
                android:text="Khu phố 6, Phường Linh Trung, Quận Thủ Đức"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
    </FrameLayout>

</FrameLayout>
