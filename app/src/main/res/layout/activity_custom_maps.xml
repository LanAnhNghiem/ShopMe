<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include layout="@layout/map_layout_main" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:background="@android:color/transparent"
        android:layout_width="257dp"
        android:layout_height="427dp"
        android:layout_gravity="start"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_sidemenu"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:background="@color/green_light"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">
                <ImageView
                    android:padding="13dp"
                    android:src="@drawable/txtshopme"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <android.support.v4.widget.Space
                android:layout_weight="0.3"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            //Accout 1
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="11">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_account" />

                <TextView
                    android:id="@+id/txtAccount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="14"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="@string/account"
                    android:textColor="@color/btnRegister"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>
            //Send feedback 1
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="11">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_feedback" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="14"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="@string/feedback"
                    android:textColor="@color/color_green"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>
            //Rate 1
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="11">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_rate" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="14"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="@string/rate"
                    android:textColor="@color/btnRegister"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>
            //Share 1
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="11">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_share" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="14"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="@string/share"
                    android:textColor="@color/btnRegister"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>
            //Sign out 1
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgLogin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/btnsignin" />

            </LinearLayout>
            <android.support.v4.widget.Space
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            //Create store
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtCreateStore"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_create_store"
                    android:gravity="center"
                    android:text="Instruction registration store"
                    android:textColor="@color/color_green"
                    android:textStyle="bold" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="top|right"
                android:paddingRight="10dp"
                android:text="@string/shopme"
                android:textColor="#002906"
                android:textSize="10sp"></TextView>
        </LinearLayout>
    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
