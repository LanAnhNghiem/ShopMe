<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout_Store"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:theme="@style/ProductTheme"
    tools:openDrawer="start">

    <LinearLayout
        android:background="@android:color/white"
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.08"
            android:background="#0f9d58"
            android:orientation="horizontal"
            android:weightSum="10">

            <android.support.v7.widget.CardView
                app:cardElevation="2dp"
                app:cardCornerRadius="3dp"
                android:layout_margin="10dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imgSlideMenuStore"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingBottom="13dp"
                        android:paddingTop="13dp"
                        android:src="@drawable/ic_slide_menu_black" />
                    <EditText
                        android:hint="Search"
                        android:paddingLeft="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/color_text"
                        android:background="@android:color/transparent"
                        android:layout_weight="8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingBottom="13dp"
                        android:paddingTop="13dp"
                        android:src="@drawable/ic_microphone" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <TextView
                android:id="@+id/txtEditProfile"
                android:visibility="gone"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="Edit"
                android:layout_gravity="right"
                android:layout_width="70dp"
                android:layout_height="match_parent" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/category_container"
            android:layout_weight="8.92"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </FrameLayout>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_slide"
            android:orientation="vertical"
            android:padding="1dp"
            android:weightSum="10">

            //3.5

            <FrameLayout
                android:layout_weight="3.5"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/imgBanerStoreSlide"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_slide"
                    android:paddingBottom="1dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/bannerstore" />
                <ImageView
                    android:id="@+id/imgChangeBanerMenu"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/change"
                    android:scaleType="fitXY"
                    android:layout_width="85dp"
                    android:layout_height="35dp" />
                <TextView
                    android:id="@+id/txtStoreNameMenu"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="20dp"
                    android:textSize="14sp"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_gravity="bottom"
                    android:text="Ding Tea Milk Tea"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />
                <TextView
                    android:id="@+id/txtEmailStoreMenu"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:typeface="serif"
                    android:layout_marginBottom="10dp"
                    android:textStyle="italic"
                    android:textColor="@android:color/white"
                    android:layout_gravity="bottom"
                    android:text="pikakun19@gmail.com"
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />
            </FrameLayout>
            //Accout 1

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3" />

            <LinearLayout
                android:id="@+id/layoutHomeDetailStore"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.9"
                android:orientation="horizontal"
                android:weightSum="11">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_home_new" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="14"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="@string/home"
                    android:textColor="@color/btnRegister"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
            //Send feedback 1

            <LinearLayout
                android:id="@+id/btnCreateProduct"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.9"
                android:orientation="horizontal"
                android:weightSum="11">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_product" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="14"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="Create Product"
                    android:textColor="#0f9d58"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
            //Rate 1

            <LinearLayout
                android:id="@+id/layoutMyProfileStore"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.9"
                android:orientation="horizontal"
                android:weightSum="11">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_history" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="14"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="History"
                    android:textColor="@color/btnRegister"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
            //Share 1

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.9"
                android:orientation="horizontal"
                android:weightSum="11">

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_noti" />

                <FrameLayout
                    android:layout_weight="10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="Notification"
                        android:textColor="@color/btnRegister"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:text="3"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="right|center_vertical"
                        android:background="@drawable/bg_notification"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                </FrameLayout>


            </LinearLayout>
            //Sign out 1

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="4">

                <ImageView
                    android:id="@+id/imgSignOut"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:src="@drawable/btn_signout_new" />

            </LinearLayout>
            //Create store 1

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp">

                <TextView
                    android:id="@+id/txtCreateStore"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_create_store"
                    android:gravity="center"
                    android:text="Instruction create product"
                    android:textColor="#0f9d58"
                    android:textStyle="bold" />
            </LinearLayout>
            //0.5

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.9"
                android:gravity="top|right"
                android:paddingRight="10dp"
                android:text="@string/shopme"
                android:textColor="#002906"
                android:textSize="10sp"></TextView>
        </LinearLayout>
    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
