<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:orientation="vertical"
    tools:context="com.threesome.shopme.AT.createstore.ThirdFragment">

    //Image 170dp
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_chooseimage"
        android:padding="1dp">

        <ImageView
            android:id="@+id/imgAvataStore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.6"
            android:src="@drawable/imgstore_big" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/note_choose_image"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="italic" />
    </LinearLayout>
</LinearLayout>
